@{
    ViewBag.Title = "Users - Attendance Tracker";
}

<div class="container-fluid">
    <div class="row-fluid">
        <div class="col-md-10 col-md-offset-1">
            <h2>Users <a class="btn btn-success" href="@Url.Action("Edit", "User")">Add</a></h2>
            <br />
        </div>
    </div>
    <div class="row-fluid">
        <div class="col-md-10 col-md-offset-1">
            <table id="UserTable" class="display" cellspacing="0" width="100%">
                <thead>
                    <tr>
                        <th></th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Email</th>
                        <th>NUID</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        var userTable = $('#UserTable').DataTable({
            "processing": true,
            "serverSide": true,
            "order": [[2, "asc"]],
            "ajax": {
                "type": "POST",
                "url": "User/UserIndexTable",
                "dataType": "JSON"
            },
            "processing": true,
            "paging": true,
            "deferRender": true,
            "columns": [
                {
                    "data": "Id",
                    sortable: false
                },
                { "data": "FirstName" },
                { "data": "LastName" },
                { "data": "Email" },
                { "data": "NUID" }
            ]
        });

        $('div.dataTables_filter input').focus();

    });
</script>