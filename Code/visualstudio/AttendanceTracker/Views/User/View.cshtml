@model AttendanceTracker.Models.User.UserViewModel

@{
    ViewBag.Title = "View User: " + Model.User.FirstName + " " + Model.User.LastName + " - Attendance Tracker";
}

<div class="container-fluid">
    <div class="row-fluid">
        <div class="col-md-10 col-md-offset-1">
            <h2>View User <a class="btn btn-success" href="@Url.Action("Edit", "User")?id=@Model.User.Id">Edit</a></h2>
            <br />
        </div>
    </div>
    <div class="row-fluid">
        <div class="col-md-4 col-md-offset-1">
            <table id="UserTable" class="table table-striped">
                <tbody>
                <tr>
                    <td><b>First Name:</b></td>
                    <td>@Model.User.FirstName</td>
                </tr>
                <tr>
                    <td><b>Last Name:</b></td>
                    <td>@Model.User.LastName</td>
                </tr>
                <tr>
                    <td><b>Email:</b></td>
                    <td>@Model.User.EmailAddress</td>
                </tr>
                <tr>
                    <td><b>NUID:</b></td>
                    <td>@Model.User.NUID</td>
                </tr>
                </tbody>
            </table>
        </div>
        <div class="col-md-4 col-md-offset-1">
            <h3>Bluetooth <a class="btn btn-success" href="@Url.Action("EditBluetooth", "User")?userId=@Model.User.Id">Add</a></h3>
            <table id="UserBluetoothTable" class="table table-striped">
                <thead>
                <tr>
                    <th>Name</th>
                    <th>Address</th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                @foreach (var bluetooth in Model.Bluetooths)
                {
                    <tr>
                        <td>@bluetooth.Name</td>
                        <td>@bluetooth.Address</td>
                        <td><a class="btn btn-default" href="@Url.Action("EditBluetooth", "User")?userId=@Model.User.Id&bluetoothId=@bluetooth.Id">Edit</a></td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>