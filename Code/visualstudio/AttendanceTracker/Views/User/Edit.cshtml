@model AttendanceTracker.Models.User.UserEditModel

@{
    if (Model.AddOrEdit == "Add")
    {
        ViewBag.Title = "Add User - Attendance Tracker";
    }
    else if (Model.AddOrEdit == "Edit")
    {
        ViewBag.Title = "Edit User: " + Model.FirstName + " " + Model.LastName + " - AttendanceTracker";
    }
}

<div class="container-fluid">
    <div class="row-fluid">
        <div class="col-md-10 col-md-offset-1">
            <h2>@Model.AddOrEdit User</h2>
            <br />
        </div>
    </div>
    <div class="row-fluid">
        <div class="col-md-4 col-md-offset-1">
            <form id="Form" action="edit" method="post" data-parsley-validate="">
                <table id="UserTable" class="table table-striped entryTable">
                    <tbody>
                        <tr>
                            <td><b>First Name *:</b></td>
                            <td><input data-parsley-trigger="change" required="" type="text" class="form-control" value="@Model.FirstName" data-bind="value: FirstName" /></td>
                        </tr>
                        <tr>
                            <td><b>Last Name *:</b></td>
                            <td><input data-parsley-trigger="change" required="" type="text" class="form-control" value="@Model.LastName" data-bind="value: LastName" /></td>
                        </tr>
                        <tr>
                            <td><b>Email:</b></td>
                            <td><input type="email" data-parsley-trigger="change" class="form-control" value="@Model.EmailAddress" data-bind="value: EmailAddress"/></td>
                        </tr>
                        <tr>
                            <td><b>NUID:</b></td>
                            <td><input type="text" data-parsley-trigger="change" class="form-control" value="@Model.NUID" data-bind="value: NUID"/></td>
                        </tr>
                        <tr>
                            <td style="padding-top: 30px">
                                <button type="button" data-bind="click: save" class="btn btn-success btn-md"><i class="fa fa-floppy-o"></i> Save</button>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </form>
        </div>
    </div>
</div>

<script type="text/javascript">
    var initialModel = @Html.Raw(Json.Encode(Model));
    $(document).ready(function(){
    });
</script>
<script type="text/javascript" src="@Url.Content("~/Content/User/UserEdit.js")"></script>


