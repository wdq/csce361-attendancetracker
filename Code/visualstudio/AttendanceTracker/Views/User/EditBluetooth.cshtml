@model AttendanceTracker.Models.User.UserBluetoothEditModel

@{
    if (Model.AddOrEdit == "Add")
    {
        ViewBag.Title = "Add User Bluetooth - Attendance Tracker";
    }
    else if (Model.AddOrEdit == "Edit")
    {
        ViewBag.Title = "Edit User Bluetooth: " + Model.Name + " - AttendanceTracker";
    }
}

<div class="container-fluid">
    <div class="row-fluid">
        <div class="col-md-10 col-md-offset-1">
            <h2>@Model.AddOrEdit User Bluetooth</h2>
            <br />
        </div>
    </div>
    <div class="row-fluid">
        <div class="col-md-4 col-md-offset-1">
            <form id="Form" action="edit" method="post" data-parsley-validate="">
                <table id="UserBluetoothTable" class="table table-striped entryTable">
                    <tbody>
                        <tr>
                            <td><b>Name:</b></td>
                            <td><input data-parsley-trigger="change" required="" type="text" class="form-control" value="@Model.Name" data-bind="value: Name" /></td>
                        </tr>
                        <tr>
                            <td><b>Address:</b></td>
                            <td><input data-parsley-trigger="change" data-parsley-pattern="^([0-9A-Fa-f]{2}[:-]){5}([0-9A-Fa-f]{2})$" required="" type="text" class="form-control" value="@Model.Address" data-bind="value: Address" /></td>
                        </tr>
                        <tr>
                            <td style="padding-top: 30px">
                                <button type="button" data-bind="click: save" class="btn btn-success btn-md"><i class="fa fa-floppy-o"></i> Save</button>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </form>
        </div>
    </div>
</div>

<script type="text/javascript">
    var initialModel = @Html.Raw(Json.Encode(Model));
    $(document).ready(function(){
    });
</script>
<script type="text/javascript" src="@Url.Content("~/Content/User/UserBluetoothEdit.js")"></script>


