@model AttendanceTracker.Models.Course.CourseEditModel

@{
    if (Model.AddOrEdit == "Add")
    {
        ViewBag.Title = "Add Course - Attendance Tracker";
    }
    else if (Model.AddOrEdit == "Edit")
    {
        ViewBag.Title = "Edit Course: " + Model.CourseCode + " " + Model.CourseNumber + "-" + Model.CourseSection + " - AttendanceTracker";
    }
}

<div class="container-fluid">
    <div class="row-fluid">
        <div class="col-md-10 col-md-offset-1">
            <h2>@Model.AddOrEdit Course</h2>
            <br />
        </div>
    </div>
    <div class="row-fluid">
        <div class="col-md-4 col-md-offset-1">
            <form id="Form" action="edit" method="post" data-parsley-validate="">
                <table id="CourseTable" class="table table-striped entryTable">
                    <tbody>
                    <tr>
                        <td><b>Course Code:</b></td>
                        <td><input data-parsley-trigger="change" required="" type="text" class="form-control" value="@Model.CourseCode" data-bind="value: CourseCode" /></td>
                    </tr>
                    <tr>
                        <td><b>Course Number:</b></td>
                        <td><input data-parsley-trigger="change" required="" type="text" class="form-control" value="@Model.CourseNumber" data-bind="value: CourseNumber" /></td>
                    </tr>
                    <tr>
                        <td><b>Course Section:</b></td>
                        <td><input data-parsley-trigger="change" required="" type="text" class="form-control" value="@Model.CourseSection" data-bind="value: CourseSection" /></td>
                    </tr>
                    <tr>
                        <td><b>Course Name:</b></td>
                        <td><input data-parsley-trigger="change" required="" type="text" class="form-control" value="@Model.CourseName" data-bind="value: CourseName" /></td>
                    </tr>
                    <tr>
                        <td><b>Class Number:</b></td>
                        <td><input data-parsley-trigger="change" required="" type="text" class="form-control" value="@Model.ClassNumber" data-bind="value: ClassNumber" /></td>
                    </tr>
                    <tr>
                        <td><b>Active:</b></td>
                        <td><input data-parsley-trigger="change" required="" type="checkbox" class="form-control" checked="@Model.IsActive" data-bind="checked: IsActive" /></td>
                    </tr>
                    <tr>
                        <td><b>Sunday:</b></td>
                        <td><input data-parsley-trigger="change" required="" type="checkbox" class="form-control" checked="@Model.IsOnSunday" data-bind="checked: IsOnSunday" /></td>
                    </tr>
                    <tr>
                        <td><b>Monday:</b></td>
                        <td><input data-parsley-trigger="change" required="" type="checkbox" class="form-control" checked="@Model.IsOnMonday" data-bind="checked: IsOnMonday" /></td>
                    </tr>
                    <tr>
                        <td><b>Tuesday:</b></td>
                        <td><input data-parsley-trigger="change" required="" type="checkbox" class="form-control" checked="@Model.IsOnTuesday" data-bind="checked: IsOnTuesday" /></td>
                    </tr>
                    <tr>
                        <td><b>Wednesday:</b></td>
                        <td><input data-parsley-trigger="change" required="" type="checkbox" class="form-control" checked="@Model.IsOnWednesday" data-bind="checked: IsOnWednesday" /></td>
                    </tr>
                    <tr>
                        <td><b>Thursday:</b></td>
                        <td><input data-parsley-trigger="change" required="" type="checkbox" class="form-control" checked="@Model.IsOnThursday" data-bind="checked: IsOnThursday" /></td>
                    </tr>
                    <tr>
                        <td><b>Friday:</b></td>
                        <td><input data-parsley-trigger="change" required="" type="checkbox" class="form-control" checked="@Model.IsOnFriday" data-bind="checked: IsOnFriday" /></td>
                    </tr>
                    <tr>
                        <td><b>Saturday:</b></td>
                        <td><input data-parsley-trigger="change" required="" type="checkbox" class="form-control" checked="@Model.IsOnSaturday" data-bind="checked: IsOnSaturday" /></td>
                    </tr>
                    <tr>
                        <td><b>Start Time:</b></td>
                        <td><input data-parsley-trigger="change" required="" type="text" class="form-control" value="@Model.StartTime" data-bind="value: StartTime" /></td>
                    </tr>
                    <tr>
                        <td><b>Stop Time:</b></td>
                        <td><input data-parsley-trigger="change" required="" type="text" class="form-control" value="@Model.StopTime" data-bind="value: StopTime" /></td>
                    </tr>
                    <tr>
                        <td><b>Semester:</b></td>
                        <td><input data-parsley-trigger="change" required="" type="text" class="form-control" value="@Model.Semester" data-bind="value: Semester" /></td>
                    </tr>
                    <tr>
                        <td><b>Year:</b></td>
                        <td><input data-parsley-trigger="change" required="" type="text" class="form-control" value="@Model.Year" data-bind="value: Year" /></td>
                    </tr>
                    <tr>
                        <td><b>Location:</b></td>
                        <td><input data-parsley-trigger="change" required="" type="text" class="form-control" value="@Model.LocationRoomId" data-bind="value: LocationRoomId" /></td>
                    </tr>
                    <tr>
                        <td><b>Attendance Code:</b></td>
                        <td><input data-parsley-trigger="change" required="" type="text" class="form-control" value="@Model.ActiveAttendanceCode" data-bind="value: ActiveAttendanceCode" /></td>
                    </tr>

                    <tr>
                        <td style="padding-top: 30px">
                            <button type="button" data-bind="click: save" class="btn btn-success btn-md"><i class="fa fa-floppy-o"></i> Save</button>
                        </td>
                    </tr>
                    </tbody>
                </table>
            </form>
        </div>
    </div>
</div>

<script type="text/javascript">
    var initialModel = @Html.Raw(Json.Encode(Model));
    $(document).ready(function(){
    });
</script>
<script type="text/javascript" src="@Url.Content("~/Content/Course/CourseEdit.js")"></script>


