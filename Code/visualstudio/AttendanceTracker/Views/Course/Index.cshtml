@{
    ViewBag.Title = "Courses - Attendance Tracker";
}

<div class="container-fluid">
    <div class="row-fluid">
        <div class="col-md-10 col-md-offset-1">
            <h2>Courses <a class="btn btn-success" href="@Url.Action("Edit", "Course")">Add</a></h2>
            <br />
        </div>
    </div>
    <div class="row-fluid">
        <div class="col-md-10 col-md-offset-1">
            <table id="CourseTable" class="display" cellspacing="0" width="100%">
                <thead>
                    <tr>
                        <th></th>
                        <th>Name</th>
                        <th>Number</th>
                        <th>Title</th>
                        <th>Semester</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        var courseTable = $('#CourseTable').DataTable({
            "processing": true,
            "serverSide": true,
            "order": [[1, "asc"]],
            "ajax": {
                "type": "POST",
                "url": '@Url.Action("CourseIndexTable", "Course")',
                "dataType": "JSON"
            },
            "processing": true,
            "paging": true,
            "deferRender": true,
            "columns": [
                {
                    "data": "Id",
                    sortable: false
                },
                { "data": "CourseName" },
                { "data": "CourseNumber" },
                { "data": "CourseTitle" },
                { "data": "CourseSemesterYear" }
            ]
        });

        $('div.dataTables_filter input').focus();

    });
</script>