@model AttendanceTracker.Models.Course.CourseStudentEditModel

@{

        ViewBag.Title = "Add Student - Attendance Tracker";
}

<div class="container-fluid">
    <div class="row-fluid">
        <div class="col-md-10 col-md-offset-1">
            <h2>Add Student</h2>
            <br />
        </div>
    </div>
    <div class="row-fluid">
        <div class="col-md-4 col-md-offset-1">
            <form id="Form" action="edit" method="post" data-parsley-validate="">
                <table id="StudentTable" class="table table-striped entryTable">
                    <tbody>
                        <tr>
                            <td><b>Student:</b></td>
                            @{
                                var studentIdTemp = Model.StudentId != new Guid() ? Model.StudentId.ToString() : null;
                            }
                            <td><input data-parsley-trigger="change" data-parsley-validstudent="text" required="" type="text" class="form-control typeahead student-typeahead" value="@studentIdTemp" data="@studentIdTemp" data-bind="data: StudentId" /></td>
                        </tr>
                        <tr>
                            <td style="padding-top: 30px">
                                <button type="button" data-bind="click: save" class="btn btn-success btn-md"><i class="fa fa-floppy-o"></i> Save</button>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </form>
        </div>
    </div>
</div>

<script type="text/javascript">
    var initialModel = @Html.Raw(Json.Encode(Model));
    $(document).ready(function(){
    });
</script>
<script type="text/javascript" src="@Url.Content("~/Content/Course/CourseStudentEdit.js")"></script>


